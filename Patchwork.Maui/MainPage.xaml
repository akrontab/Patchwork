<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Patchwork.Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="Patchwork Task Runner"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="AddTaskBtn"
                Text="Add Task"
                Clicked="OnAddTaskClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="CancelTasksBtn"
                Text="Cancel Running Tasks"
                Clicked="OnCancelTasksClicked"
                HorizontalOptions="Fill" />

            <Label
                x:Name="RunningTasksLabel"
                Text="Running Tasks: 0"
                Style="{StaticResource SubHeadline}" />
            <Label
                x:Name="CompletedTasksLabel"
                Text="Completed Tasks: 0"
                Style="{StaticResource SubHeadline}" />

            <Label
                Text="Running Tasks List:"
                FontAttributes="Bold" />
            <CollectionView x:Name="RunningTasksList" HeightRequest="150">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label
                Text="Console Output:"
                FontAttributes="Bold"
                Margin="0,20,0,0" />
            <Editor x:Name="ConsoleOutputEditor"
                    HeightRequest="120"
                    IsReadOnly="True"
                    AutoSize="TextChanges"
                    Text="" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
